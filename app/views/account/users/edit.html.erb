<div class="row">
  <div class="col-md-4 col-md-offset-4 ">
    <div class="col-md-10 col-md-offset-1">
    <h2>修改信息</h2>

    <%= simple_form_for [:account, @user] do |f| %>



      <div class="form-inputs">
        <% if @user.avatar.present? %>
          <span>头像</span> <br>
          <%= image_tag(@user.avatar.thumb.url) %>
        <% end %>
        <%= f.input :avatar, :label => "头像", as: :file %>
      </div>
      <div class="form-inputs">
        <%= f.input :username, :label => "用户名",required: true %>
        <%= f.input :email, :label =>"邮箱地址" , required: true, autofocus: true %>
        <%= f.input :current_password, :label => "当前密码", required: true %>
        <%= f.input :password, autocomplete: "off", :label => "新密码", required: false %>
        <%= f.input :password_confirmation, :label => "确认新密码",required: false %>
      </div>
      <hr>

      <div class="form-actions">
        <%= f.button :submit, "更新" %>
      </div>
    <% end %>

  </div>
  </div>
</div>

<div class="row main signback">
  <div class="col-md-4 col-md-offset-4 ">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel-heading">
         <div class="panel-title text-center">
            <h1 class="title">注册账号</h1>
            <hr />
          </div>
      </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <!-- <%= f.input :username, :label => "用户名",required: true %>
        <%= f.input :email, :label =>"邮箱地址" , required: true, autofocus: true %>
        <%= f.input :password, :label => "登录密码",required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation,:label => "密码确认", required: true %> -->

        <div class="form-group">
          <label for="email" class="cols-sm-2 control-label">注册邮箱</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
              <%= f.email_field :email, :label =>"邮箱地址" , required: true, autofocus: true ,class: "form-control" ,placeholder: "邮箱"%>

              <!-- <%= f.email_field :email, required: true, autofocus: true , class: "form-control" ,  placeholder: "邮箱"%> -->
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="username" class="cols-sm-2 control-label">用户名</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
              <%= f.text_field :username, required: true , autofocus: true, class: "form-control", placeholder: "用户名" %>
            </div>
          </div>
        </div>


        <div class="form-group">
          <label for="password" class="cols-sm-2 control-label">输入密码</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
              <%= f.password_field :password, required: true, autocomplete: "off", class: "form-control", placeholder: "输入密码（至少6位）" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="confirm" class="cols-sm-2 control-label">密码确认</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
              <%= f.password_field :password_confirmation,required: true ,autocomplete: "off",  class: "form-control", placeholder: "再次确认"%>
            </div>
          </div>
        </div>



      </div>

      <div class="form-group ">
        <button type="submit" class="btn btn-primary btn-lg btn-block login-button">注册</button>
      </div>
    <% end %>
    <hr>
    <div class="login-register">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  </div>
</div>
