<div class="row main loginback">
  <div class="col-md-4 col-md-offset-4 ">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel-heading">
         <div class="panel-title text-center">
            <h1 class="title">登录账号</h1>
            <hr />
          </div>
      </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">

        <div class="form-group">
          <label for="email" class="cols-sm-2 control-label">登录邮箱</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
              <%= f.email_field :email, :label =>"邮箱地址" , required: false, autofocus: true ,class: "form-control" ,placeholder: "邮箱"%>
            </div>
          </div>
        </div>


        <div class="form-group">
          <label for="password" class="cols-sm-2 control-label">登录密码</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
              <%= f.password_field :password, required: false, autocomplete: "off",  class: "form-control", placeholder: "输入密码" %>
            </div>
          </div>
        </div>

          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-group ">
        <button type="submit" class="btn btn-primary btn-lg btn-block login-button">登录</button>
      </div>
    <% end %>
    <hr>
    <div class="login-register">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  </div>
</div>
